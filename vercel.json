{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py",
        "PYTHONUNBUFFERED": "1",
        "DATA_DIR": "/tmp/earthquakes_data",
        "EARTHQUAKE_URL": "https://seismonepal.gov.np/earthquakes"
    }
}